#!/usr/bin/env bash

set -euo pipefail

function install() {
  # local install_type=$1
  local version="$2"
  local install_path="$3"
  local bin_install_path="${install_path}/bin"
  local file="grpcurl"
  local platform="$(get_os)_$(get_arch)"
  local download_url="https://github.com/fullstorydev/grpcurl/releases/download/v${version}/grpcurl_${version}_${platform}.tar.gz"

  echo "Downloading grpcurl from ${download_url}"

  mkdir -p "$bin_install_path"
  curl -sL "$download_url" | tar xz -C "$bin_install_path" "$file"
}

function get_os() {
  local os=$(uname -s | tr '[:upper:]' '[:lower:]')
  case $os in
    darwin) os="osx" ;;
  esac
  echo "$os"
}

function get_arch() {
  local arch=$(uname -m)
  case $arch in
    arm64|aarch64) arch="arm64" ;;
  esac
  echo "$arch"
}

install "$ASDF_INSTALL_TYPE" "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"
# vim: ai ts=2 sw=2 et sts=2 ft=sh
